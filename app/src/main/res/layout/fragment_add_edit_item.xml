<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="720dp"
    android:layout_alignParentLeft="false"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#7C99D2"
    android:translationX="5dp"
    android:translationY="5dp"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="400dp"
    tools:context=".AddEditItemFragment">


    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="204dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:text="confirm"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editMake"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editModel"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginBottom="576dp"
        android:ems="10"
        android:hint="Edit Item Make"
        android:inputType="text"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/itemListTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="626dp"
        android:text="Edit/Add Item"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="234dp"
        android:text="Item Comment"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editComment"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:gravity="top|start"
        android:hint="Edit Comment"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/editCost"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="474dp"
        android:ems="10"
        android:hint="Edit Item Cost"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editModel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="163dp"
        android:ems="10"
        android:hint="Edit Item Model"
        android:inputType="text"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="107dp"
        android:ems="10"
        android:hint="Edit Item Description"
        android:inputType="text|textLongMessage"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editSN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:hint="Edit Item SN"
        android:inputType="text|textLongMessage"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="521dp"
        android:ems="10"
        android:hint="Edit Item Date"
        android:inputType="date"
        android:textAlignment="center" />
</RelativeLayout>

